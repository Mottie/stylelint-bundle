{
  "name": "stylelint-bundle",
  "version": "8.0.0",
  "description": "Create & provide a bundled version of Stylelint",
  "keywords": [
    "css",
    "less",
    "scss",
    "sugarss",
    "lint",
    "linter",
    "stylelint",
    "bundle",
    "browserify"
  ],
  "authors": [
    "Rob Garrison"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openstyles/stylelint-bundle.git"
  },
  "main": "stylelint-bundle.min.js",
  "devDependencies": {
    "browserify": "^16.2.2",
    "del": "^3.0.0",
    "mocha": "^5.2.0",
    "stylelint": "8.0.0",
    "uglify-es": "^3.3.10",
    "updates": "^3.0.1"
  },
  "scripts": {
    "cleanbuild": "rm -rf node_modules/stylelint && npm install --save-exact stylelint@8.0.0 && npm run build",
    "build": "node build/index.js && npm run bundle && node build/post-build.js && npm run uglify && npm run test",
    "bundle": "browserify -r stylelint -o stylelint-bundle.js",
    "test": "mocha",
    "uglify": "npm run uglifybundle && npm run uglifyworker",
    "uglifybundle": "uglifyjs ./stylelint-bundle.js --comments \"/^!=/\" -o stylelint-bundle.min.js -c -m",
    "uglifyworker": "uglifyjs ./stylelint-bundle-worker.js --comments \"/^!=/\" -o stylelint-bundle-worker.min.js -c -m"
  }
}